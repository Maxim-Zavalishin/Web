@model BaikalNews.Domain.Models.Worker

@{
    ViewData["Title"] = "getWorkers";
}

<h1>Workers</h1>

<div class="row">
    <div class="col">
        <form id="formApi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-flex">
                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" id="workerName"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" id="workerEmail"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex"> 
                <div class="form-group col-md-4">
                    <label asp-for="Lastname" class="control-label"></label>
                    <input asp-for="Lastname" class="form-control" id="workerLastname"/>
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" id="workerPassword"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>  
            </div>
            <div class="form-group d-flex"> 
                <div class="form-group col-md-4">
                    <label asp-for="IdRole" class="control-label"></label>
                    <input asp-for="IdRole" class="form-control" id="workerIdRole" />
                    <span asp-validation-for="IdRole" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 mt-2 justify-content-center">
                    <input type="submit" value="Добавить" class="btn btn-primary" itemid="saveBtn" />
                </div>
            </div>
        
            
            
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRole)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script src="~/js/worker.js" asp-append-version="true"></script>